<div class="container">
	<div class="row">
		<div class="col-lg-4">
			<h1><%= @user.name %></h1>
		</div>
		<div class="col-lg-8">
			<% @user.posts.order("created_at DESC").each do |post| %>
			<div class="post well">
				<h5><%= post.title %></h6>
				<p><%= post.content %></p>
			</div>
			<% end %>
		</div>
	</div>
</div>